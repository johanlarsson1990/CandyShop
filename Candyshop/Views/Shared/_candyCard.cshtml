@model Candy  

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        @if (Model.IsOnSale == true)
        {
        <div class="parent">
            <img id="banner" src="~/Images/KampanjBanner.png" alt="banner" />
            <img id="candythumb"src="@Model.ImageThumbnailUrl" alt="imge for candy" />
        </div>
            
        }
        else
        {
            <img src="@Model.ImageThumbnailUrl" alt="imge for candy" />
        }



        <div class="caption">
            @if (Model.IsOnSale == true)
            {
                <h3 class="pull-right" style="color: red">@Model.SalesPrice.ToString("c")</h3>
            }
            @if (Model.IsOnSale == false)
            {
                <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            }

            <h3><a asp-controller="Candy" asp-action="Details" asp-route-id="@Model.CandyId">@Model.Name</a></h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-candyId="@Model.CandyId">Lägg till</a>
            </p>
        </div>
    </div>
</div>