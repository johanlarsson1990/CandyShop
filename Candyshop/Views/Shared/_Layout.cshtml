<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <link href="~/content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ol class="nav navbar-nav">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Start</a></li>
                        @await Component.InvokeAsync("CategoryMenu")
                        <li><a asp-area="" asp-controller="Contact" asp-action="Index">Kontakta oss</a></li>
                        <partial name="_LoginPartial" />
                        @await Component.InvokeAsync("ShoppingCartSummary")
                        <partial name="_WeatherView" />
                        <partial name="AdminMenuPartial" />
                    </ol>
                    
                </div>
            </div>
        </nav>

        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    <img class="img-responsive" src="~/Images/Kiwifakrikenlogo.png" />
                </p>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>

        </div>
        @RenderSection("Scripts", required:false)
    </div>
</body>
</html>
